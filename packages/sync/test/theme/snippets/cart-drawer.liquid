<section class='cart-drawer-outer fix fill z10' data-component='cart-drawer'>
  <div class='cart-drawer-overlay abs fill bg-gm js-overlay'></div>
  <div class='cart-drawer fill-y abs top right bottom bg-w js-drawer f'>
    <header class='outer fill-y abs top left f aic'>
      <div class='f aic rel fill-y'>
        <button class='abs left button--reset js-close'>
          {% include 'icon-chevron' with left: true, className: 'abs mxa fill' %}
        </button>

        <h3 class='mv0 serif ac fill-y'>Your Cart</h3>
      </div>
    </header>

    <div class='cart-drawer__items outer outer--v fill-x fill-y'>
      <div class='js-items rel fill-x fill-y'>
        <div class='abs fill'>
          <svg viewBox="0 0 100 86" class='loader abs fill mxa cg'>
            <use xlink:href="#logo"></use>
          </svg>
        </div>
      </div>
    </div>

    <footer class='outer outer--v abs bottom left right'>
      <h5 class='mv1 sans track caps ac medium'>Subtotal: <span class='js-subtotal'>$-.--</span></h5>

      {%
      include 'button' with
      tag: 'a',
      cta: 'Checkout',
      href: '/checkout',
      className: 'fill-y no-ajax'
      %}
    </footer>
  </div>
</section>
